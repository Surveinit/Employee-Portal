@model EmployeePortal.Web.Models.AddEmployeeViewModel

<h1>Add Employee</h1>

<form method="post">
    <div class="mt-5">
        <label class="form-lable">Name: </label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Designation: </label>
        <input type="text" class="form-control" asp-for="Designation"/>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="experience" asp-for="Experience"/>
        <label>Experience?</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>