@{
} 

@model EmployeePortal.Web.Models.Entities.Employee; 

@if(Model is null)
{
    <p>No Employees are found with this id.</p>
}

else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Edit Employee</h1>
        <a asp-controller="Employees" asp-action="Add" class="btn btn-primary">Add Employee</a>
    </div>

    <form method="post">
        <div class="mt-5">
            <label class="form-lable">Id: </label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-5">
            <label class="form-lable">Name: </label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-lable">Designation: </label>
            <input type="text" class="form-control" asp-for="Designation" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="experience" asp-for="Experience" />
            <label>Experience?</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3"
            asp-controller="Employees" asp-action="delete">Delete</button>

        </div>

    </form>
}

